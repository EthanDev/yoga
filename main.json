{
    "type": "APL",
    "version": "1.3",
    "settings": {},
    "theme": "light",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.1.0"
        },
        {
            "name": "alexa-viewport-profiles",
            "version": "1.1.0"
        }
    ],
    "resources": [
        {
            "description": "Stock color for the light theme",
            "colors": {
                "colorTextPrimary": "#ffffff"
            }
        },
        {
            "description": "Stock color for the dark theme",
            "when": "${viewport.theme == 'dark'}",
            "colors": {
                "colorTextPrimary": "#ffffff"
            }
        },
        {
            "description": "Standard font sizes",
            "when": "${@viewportProfile == @tvLandscapeXLarge}",
            "dimensions": {
                "textSizeBody": 48,
                "textSizePrimary": 20,
                "textSizeSecondary": 15,
                "textSizeTertiary": 18,
                "textSizeDetails": 20,
                "textSizeSecondaryHint": 25,
                "videoCardTextSize": 13
            }
        },
        {
            "description": "Common margins and padding",
            "when": "${@viewportProfile == @tvLandscapeXLarge}",
            "dimensions": {
                "marginTop": 40,
                "marginLeft": 10,
                "marginRight": 10,
                "marginBottom": 40
            }
        }
    ],
    "styles": {
        "videoCardStyle": {
            "values": [
                {
                    "when": "${state.focused}",
                    "borderColor": "white",
                    "opacity": "1",
                    "borderRadius": "10"
                },
                {
                    "when": "${!state.focused}",
                    "borderColor": "",
                    "borderRadius": "11"
                }
            ]
        },
        "titleText": {
            "values": {
                "color": "@colorTextPrimary",
                "fontWeight": "400",
                "fontSize": "@textSizePrimary",
                "fontFamily": "helvetica",
                "width": "100%",
                "textAlign": "left",
                "maxLines": 2
            }
        },
        "backgroundBtm": {
            "values": {
                "opacity": 1,
                "width": "100vw",
                "height": "100vh",
                "scale": "best-fill",
                "position": "absolute",
                "overlayGradient": {
                    "type": "linear",
                    "angle": 360,
                    "colorRange": [
                        "black",
                        "transparent"
                    ],
                    "inputRange": [
                        0,
                        0.1
                    ]
                }
            }
        },
        "backgroundBtmSmall": {
            "values": {
                "opacity": 1,
                "width": "100vw",
                "height": "100vh",
                "scale": "best-fill",
                "position": "absolute",
                "overlayGradient": {
                    "type": "linear",
                    "angle": 360,
                    "colorRange": [
                        "black",
                        "transparent"
                    ],
                    "inputRange": [
                        0,
                        0.4
                    ]
                }
            }
        },
        "subTitlePrimary": {
            "values": {
                "color": "@colorTextPrimary",
                "fontWeight": "300",
                "fontSize": "@textSizeSecondary",
                "fontFamily": "helvetica",
                "width": "100%",
                "textAlign": "left",
                "maxLines": 3
            }
        },
        "videoCardTitle": {
            "values": {
                "color": "@colorTextPrimary",
                "fontWeight": "200",
                "fontSize": "@videoCardTextSize"
            }
        },
        "smallTitle": {
            "values": {
                "color": "#EDE1CB",
                "fontFamily": "helvetica",
                "fontWeight": "300",
                "textAlign": "center",
                "textAlignVertical": "center",
                "fontSize": "@textSizeTertiary"
            }
        }
    },
    "onMount": [],
    "graphics": {},
    "commands": {
        "cmdHighlightVideoCard": {
            "parameters": [
                "pComponentId"
            ],
            "commands": [
                {
                    "type": "SetValue",
                    "componentId": "${pComponentId}",
                    "property": "borderColor",
                    "value": "red"
                }
            ]
        },
        "cardDepressCmd": {
            "parameters": [
                "cmdId",
                "duration"
            ],
            "description": "When a video card is pressed",
            "commands": [
                {
                    "componentId": "${cmdId}",
                    "duration": "${duration}",
                    "easing": "ease-in-out",
                    "type": "AnimateItem",
                    "value": [
                        {
                            "property": "transform",
                            "from": [
                                {
                                    "scale": 1
                                }
                            ],
                            "to": [
                                {
                                    "scale": 0.95
                                }
                            ]
                        }
                    ]
                },
                {
                    "componentId": "${cmdId}",
                    "duration": "${duration}",
                    "easing": "ease-in-out",
                    "type": "AnimateItem",
                    "value": [
                        {
                            "property": "transform",
                            "from": [
                                {
                                    "scale": 0.95
                                }
                            ],
                            "to": [
                                {
                                    "scale": 1
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    },
    "layouts": {
        "videoCardsLayout": {
            "parameters": [
                "list"
            ],
            "items": [
                {
                    "type": "Container",
                    "when": "${@viewportProfile == @tvLandscapeXLarge}",
                    "width": "100vw",
                    "height": "35vh",
                    "paddingTop": "5",
                    "direction": "row",
                    "items": [
                        {
                            "type": "Sequence",
                            "width": "100vw",
                            "height": "40vh",
                            "paddingLeft": "@marginLeft",
                            "paddingRight": "@marginRight",
                            "data": "${list}",
                            "numbered": true,
                            "scrollDirection": "horizontal",
                            "item": {
                                "type": "TouchWrapper",
                                "onPress": [
                                    {
                                        "type": "cardDepressCmd",
                                        "cmdId": "touch-${ordinal}",
                                        "duration": 250
                                    },
                                    {
                                        "type": "SendEvent",
                                        "arguments": [
                                            "videoCardPressed"
                                        ],
                                        "components": [
                                            "videoCard-${ordinal}"
                                        ]
                                    }
                                ],
                                "id": "touch-${ordinal}",
                                "width": "15vw",
                                "height": "30vh",
                                "paddingRight": "15vw",
                                "item": {
                                    "type": "Container",
                                    "inheritParentState": true,
                                    "width": "15vw",
                                    "height": "30vh",
                                    "items": [
                                        {
                                            "type": "Frame",
                                            "id": "videoCard-${ordinal}",
                                            "style": "videoCardStyle",
                                            "inheritParentState": true,
                                            "width": "15vw",
                                            "height": "29.4vh",
                                            "position": "absolute",
                                            "item": [
                                                {
                                                    "type": "Image",
                                                    "inheritParentState": true,
                                                    "opacity": 1,
                                                    "width": "14.4vw",
                                                    "height": "28.4vh",
                                                    "source": "${data.picture.value}",
                                                    "scale": "best-fill",
                                                    "align": "left",
                                                    "borderRadius": "9",
                                                    "overlayGradient": {
                                                        "type": "linear",
                                                        "angle": 0,
                                                        "colorRange": [
                                                            "black",
                                                            "transparent"
                                                        ],
                                                        "inputRange": [
                                                            0,
                                                            1
                                                        ]
                                                    }
                                                }
                                            ],
                                            "borderWidth": "0.3vw"
                                        },
                                        {
                                            "type": "Text",
                                            "style": "videoCardTitle",
                                            "width": "10vw",
                                            "height": "3vh",
                                            "position": "relative",
                                            "textAlign": "left",
                                            "textAlignVertical": "bottom",
                                            "fontFamily": "helvetica",
                                            "maxLines": 1,
                                            "text": "${data.humanLabel.value}",
                                            "left": "1vw",
                                            "top": "25vh"
                                        }
                                    ]
                                }
                            }
                        }
                    ],
                    "position": "absolute",
                    "left": "4vw",
                    "top": "67vh"
                }
            ]
        },
        "backgroundLeftLayout": {
            "parameters": [
                "bgImg"
            ],
            "items": [
                {
                    "when": "${@viewportProfile == @hubLandscapeSmall || @viewportProfile == @hubLandscapeMedium ||@viewportProfile == @hubLandscapeLarge || @viewportProfile == @tvLandscapeXLarge}",
                    "type": "Image",
                    "opacity": 1,
                    "width": "100vw",
                    "height": "100vh",
                    "source": "${bgImg}",
                    "scale": "best-fill",
                    "position": "absolute",
                    "overlayGradient": {
                        "type": "linear",
                        "angle": 90,
                        "colorRange": [
                            "black",
                            "transparent"
                        ],
                        "inputRange": [
                            0.2,
                            0.5
                        ]
                    }
                }
            ]
        },
        "backgrounBtmLayout": {
            "parameters": [
                "bgImgTransparent"
            ],
            "items": [
                {
                    "when": "${@viewportProfile == @hubLandscapeSmall}",
                    "type": "Image",
                    "opacity": 1,
                    "width": "100vw",
                    "height": "100vh",
                    "source": "${bgImgTransparent}",
                    "scale": "best-fill",
                    "position": "absolute",
                    "overlayGradient": {
                        "type": "linear",
                        "angle": 360,
                        "colorRange": [
                            "black",
                            "transparent"
                        ],
                        "inputRange": [
                            0,
                            0.5
                        ]
                    }
                },
                {
                    "when": "${@viewportProfile == @hubLandscapeMedium ||@viewportProfile == @hubLandscapeLarge || @viewportProfile == @tvLandscapeXLarge}",
                    "type": "Image",
                    "opacity": 1,
                    "width": "100vw",
                    "height": "100vh",
                    "source": "${bgImgTransparent}",
                    "scale": "best-fill",
                    "position": "absolute",
                    "overlayGradient": {
                        "type": "linear",
                        "angle": 360,
                        "colorRange": [
                            "black",
                            "transparent"
                        ],
                        "inputRange": [
                            0,
                            0.1
                        ]
                    }
                }
            ]
        },
        "titleTextLayout": {
            "parameters": [
                "titleText"
            ],
            "items": [
                {
                    "when": "${@viewportProfile == @tvLandscapeXLarge}",
                    "type": "Container",
                    "description": "Container Title under the logo",
                    "position": "absolute",
                    "width": "50vw",
                    "height": "40vh",
                    "top": "30vh",
                    "left": "5vw",
                    "direction": "column",
                    "items": [
                        {
                            "type": "Text",
                            "style": "titleText",
                            "text": "${titleText}"
                        }
                    ]
                }
            ]
        },
        "subTitleTextLayout": {
            "parameters": [
                "subTitleText"
            ],
            "items": [
                {
                    "when": "${@viewportProfile == @tvLandscapeXLarge}",
                    "type": "Container",
                    "description": "Container for subtitle text",
                    "position": "absolute",
                    "width": "45vw",
                    "height": "15vh",
                    "top": "37vh",
                    "left": "5vw",
                    "direction": "column",
                    "items": [
                        {
                            "type": "Text",
                            "style": "subTitlePrimary",
                            "text": "${subTitleText}"
                        }
                    ]
                }
            ]
        },
        "watchNowBtnLayout": {
            "parameters": [
                "pBtnText"
            ],
            "item": [
                {
                    "when": "${@viewportProfile == @tvLandscapeXLarge}",
                    "type": "TouchWrapper",
                    "onPress": [
                        {
                            "type": "cardDepressCmd",
                            "cmdId": "btnTouch",
                            "duration": 250
                        },
                        {
                            "type": "SendEvent",
                            "arguments": [
                                "watchNowBtnPressed"
                            ]
                        }
                    ],
                    "id": "btnTouch",
                    "width": "16vw",
                    "height": "8vh",
                    "top": "50vh",
                    "left": "5vw",
                    "item": [
                        {
                            "type": "Container",
                            "description": "Container for watch now button",
                            "position": "absolute",
                            "width": "16vw",
                            "height": "8vh",
                            "top": "50vh",
                            "left": "5vw",
                            "direction": "row",
                            "items": [
                                {
                                    "type": "Frame",
                                    "width": "16vw",
                                    "height": "8vh",
                                    "backgroundColor": "#202F58",
                                    "borderColor": "white",
                                    "borderWidth": 1.5,
                                    "borderRadius": "50",
                                    "item": [
                                        {
                                            "type": "Text",
                                            "style": "smallTitle",
                                            "width": "15vw",
                                            "height": "7vh",
                                            "textAlignVertical": "center",
                                            "text": "${pBtnText}",
                                            "lineHeight": 2
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "logoLayout": {
            "parameters": [
                "logoUrl"
            ],
            "item": [
                {
                    "when": "${@viewportProfile == @tvLandscapeXLarge}",
                    "type": "Container",
                    "description": "Container for the logo",
                    "position": "absolute",
                    "width": "20vw",
                    "height": "30vh",
                    "top": "3vh",
                    "left": "2vw",
                    "direction": "row",
                    "items": [
                        {
                            "type": "Image",
                            "id": "logo1",
                            "opacity": 1,
                            "width": "100%",
                            "height": "100%",
                            "scale": "best-fit",
                            "source": "${logoUrl}"
                        }
                    ]
                }
            ]
        },
        "mainLayout": {
            "parameters": [
                "pBackgroundImage",
                "pTransparentBg",
                "pLogoImage",
                "pTitleText",
                "pSubTitleText",
                "pWatchNowBtn",
                "list"
            ],
            "items": [
                {
                    "type": "Container",
                    "height": "100vh",
                    "width": "100vw",
                    "items": [
                        {
                            "type": "backgroundLeftLayout",
                            "bgImg": "${pBackgroundImage}"
                        },
                        {
                            "type": "backgrounBtmLayout",
                            "bgImgTransparent": "${pTransparentBg}"
                        },
                        {
                            "type": "logoLayout",
                            "logoUrl": "${pLogoImage}"
                        },
                        {
                            "type": "titleTextLayout",
                            "titleText": "${pTitleText}"
                        },
                        {
                            "type": "subTitleTextLayout",
                            "subTitleText": "${pSubTitleText}"
                        },
                        {
                            "type": "watchNowBtnLayout",
                            "pBtnText": " â–¶   WATCH NOW  "
                        },
                        {
                            "type": "videoCardsLayout",
                            "list": "${list}"
                        }
                    ]
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "mainLayout",
                "pBackgroundImage": "${payload.currentView.properties.backgroundImage}",
                "pTransparentBg": "${payload.currentView.properties.transparentBg}",
                "pLogoImage": "${payload.currentView.properties.logoImage}",
                "pTitleText": "${payload.currentView.properties.titleText}",
                "pSubTitleText": "${payload.currentView.properties.subTitleText}",
                "pWatchNowBtn": "${payload.currentView.properties.watchNowBtn}",
                "list": "${payload.currentView.videoCards}"
            }
        ]
    }
}