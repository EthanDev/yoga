{
    "type": "APL",
    "version": "1.3",
    "settings": {},
    "theme": "light",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.1.0"
        }
    ],
    "resources": [
        {
            "description": "Stock color for the light theme",
            "colors": {
                "colorTextPrimary": "#ffffff"
            }
        },
        {
            "description": "Stock color for the dark theme",
            "when": "${viewport.theme == 'dark'}",
            "colors": {
                "colorTextPrimary": "#ffffff"
            }
        },
        {
            "description": "Standard font sizes",
            "dimensions": {
                "textSizeBody": 48,
                "textSizePrimary": 20,
                "textSizeSecondary": 15,
                "textSizeTertiary": 18,
                "textSizeDetails": 20,
                "textSizeSecondaryHint": 25,
                "videoCardTextSize": 13
            }
        },
        {
            "description": "Common margins and padding",
            "dimensions": {
                "marginTop": 40,
                "marginLeft": 10,
                "marginRight": 10,
                "marginBottom": 40
            }
        },
        {
            "description": "Common margins and padding",
            "dimensions": {
                "marginTop": 40,
                "marginLeft": 10,
                "marginRight": 10,
                "marginBottom": 40
            }
        }
    ],
    "styles": {
        "textStylePrimary": {
            "values": {
                "color": "@colorTextPrimary",
                "fontWeight": "400",
                "fontSize": "@textSizePrimary"
            }
        },
        "subTitlePrimary": {
            "values": {
                "color": "@colorTextPrimary",
                "fontWeight": "300",
                "fontSize": "@textSizeSecondary"
            }
        },
        "videoCardTitle": {
            "values": {
                "color": "@colorTextPrimary",
                "fontWeight": "200",
                "fontSize": "@videoCardTextSize"
            }
        },
        "smallTitle": {
            "values": {
                "color": "#EDE1CB",
                "fontFamily": "helvetica",
                "fontWeight": "300",
                "textAlign": "center",
                "textAlignVertical": "center",
                "fontSize": "@textSizeTertiary"
            }
        }
    },
    "onMount": [],
    "graphics": {},
    "commands": {
        "cmdHighlightVideoCard": {
            "parameters": [
                "pComponentId"
            ],
            "commands": [
                {
                    "type": "SetValue",
                    "componentId": "${pComponentId}",
                    "property": "borderColor",
                    "value": "red"
                }
            ]
        },
        "flash": {
            "parameters": [
                "duration",
                "delay"
            ],
            "commands": [
                {
                    "type": "AnimateItem",
                    "duration": "${duration * 0.25}",
                    "delay": "${delay || 0}",
                    "value": [
                        {
                            "property": "opacity",
                            "from": 1,
                            "to": 0
                        }
                    ]
                },
                {
                    "type": "AnimateItem",
                    "duration": "${duration * 0.25}",
                    "delay": "${delay || 0}",
                    "value": [
                        {
                            "property": "opacity",
                            "from": 0,
                            "to": 1
                        }
                    ]
                },
                {
                    "type": "AnimateItem",
                    "duration": "${duration * 0.25}",
                    "delay": "${delay || 0}",
                    "value": [
                        {
                            "property": "opacity",
                            "from": 0,
                            "to": 1
                        }
                    ]
                },
                {
                    "type": "AnimateItem",
                    "duration": "${duration * 0.25}",
                    "delay": "${delay || 0}",
                    "value": [
                        {
                            "property": "opacity",
                            "from": 0,
                            "to": 1
                        }
                    ]
                }
            ]
        }
    },
    "layouts": {
        "videoCardsLayout": {
            "item": [
                {
                    "type": "TouchWrapper",
                    "id": "touch-${ordinal}",
                    "width": "15vw",
                    "height": "30vh",
                    "item": [
                        {
                            "type": "Container",
                            "paddingLeft": 16,
                            "paddingRight": 16,
                            "width": "16vw",
                            "height": "30vh",
                            "items": [
                                {
                                    "type": "Frame",
                                    "id": "videoCard1",
                                    "width": "15vw",
                                    "height": "30vh",
                                    "position": "absolute",
                                    "item": [
                                        {
                                            "type": "Image",
                                            "opacity": 1,
                                            "width": "15vw",
                                            "height": "30vh",
                                            "source": "${data.picture.value}",
                                            "scale": "best-fill",
                                            "align": "center",
                                            "borderRadius": "15",
                                            "overlayGradient": {
                                                "type": "linear",
                                                "angle": 0,
                                                "colorRange": [
                                                    "black",
                                                    "transparent"
                                                ],
                                                "inputRange": [
                                                    0,
                                                    1
                                                ]
                                            }
                                        }
                                    ],
                                    "borderRadius": "15",
                                    "borderWidth": "0.4vw"
                                },
                                {
                                    "type": "Text",
                                    "style": "videoCardTitle",
                                    "width": "10vw",
                                    "height": "3vh",
                                    "position": "relative",
                                    "textAlign": "left",
                                    "textAlignVertical": "bottom",
                                    "fontFamily": "helvetica",
                                    "maxLines": 1,
                                    "text": "${data.humanLabel.value}",
                                    "left": "0.2vw",
                                    "top": "25vh"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "backgroundLeftLayout": {
            "parameters": [
                "bgImg"
            ],
            "items": [
                {
                    "type": "Image",
                    "opacity": 1,
                    "width": "100vw",
                    "height": "100vh",
                    "source": "${bgImg}",
                    "scale": "best-fill",
                    "position": "absolute",
                    "overlayGradient": {
                        "type": "linear",
                        "angle": 90,
                        "colorRange": [
                            "black",
                            "transparent"
                        ],
                        "inputRange": [
                            0.2,
                            1
                        ]
                    }
                }
            ]
        },
        "backgrounBtmLayout": {
            "parameters": [
                "bgImg"
            ],
            "items": [
                {
                    "type": "Image",
                    "opacity": 1,
                    "width": "100vw",
                    "height": "100vh",
                    "source": "https://res.cloudinary.com/snapitdirect/image/upload/v1586163992/APL/blank.png",
                    "scale": "best-fill",
                    "position": "absolute",
                    "overlayGradient": {
                        "type": "linear",
                        "angle": 360,
                        "colorRange": [
                            "black",
                            "transparent"
                        ],
                        "inputRange": [
                            0,
                            0
                        ]
                    }
                }
            ]
        },
        "logoLayout": {
            "parameters": [
                "logoUrl"
            ],
            "items": [
                {
                    "type": "Image",
                    "opacity": 1,
                    "width": "100%",
                    "height": "100%",
                    "source": "${logoUrl}",
                    "scale": "best-fit"
                }
            ]
        },
        "BtnLayout": {
            "parameters": [
                "url"
            ],
            "items": [
                {
                    "type": "Image",
                    "opacity": 1,
                    "width": "100vw",
                    "height": "100vh",
                    "source": "${url}",
                    "scale": "best-fit"
                }
            ]
        },
        "titleTextLayout": {
            "parameters": [
                "titleText"
            ],
            "items": [
                {
                    "type": "Text",
                    "fontFamily": "helvetica",
                    "width": "100%",
                    "textAlign": "left",
                    "style": "textStylePrimary",
                    "text": "${titleText}",
                    "maxLines": 2
                }
            ]
        },
        "subTitleTextLayout": {
            "parameters": [
                "subTitleText"
            ],
            "items": [
                {
                    "type": "Text",
                    "fontFamily": "helvetica",
                    "width": "100%",
                    "textAlign": "left",
                    "style": "subTitlePrimary",
                    "text": "${subTitleText}",
                    "maxLines": 3
                }
            ]
        },
        "mainLayout": {
            "parameters": [
                "pBackgroundImage",
                "transparentBtmBg",
                "pLogoImage",
                "pTitleText",
                "pSubTitleText",
                "pWatchNowBtn",
                "list"
            ],
            "items": [
                {
                    "type": "Container",
                    "height": "100vh",
                    "width": "100vw",
                    "items": [
                        {
                            "type": "backgroundLeftLayout",
                            "bgImg": "${pBackgroundImage}"
                        },
                        {
                            "type": "backgrounBtmLayout",
                            "bgImg": "${transparentBtmBg}"
                        },
                        {
                            "type": "Container",
                            "description": "Container for the logo",
                            "position": "absolute",
                            "width": "20vw",
                            "height": "30vh",
                            "top": "3vh",
                            "left": "2vw",
                            "direction": "row",
                            "items": [
                                {
                                    "type": "logoLayout",
                                    "logoUrl": "${pLogoImage}"
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "description": "Container Title under the logo",
                            "position": "absolute",
                            "width": "50vw",
                            "height": "40vh",
                            "top": "30vh",
                            "left": "5vw",
                            "direction": "column",
                            "items": [
                                {
                                    "type": "titleTextLayout",
                                    "titleText": "${pTitleText}"
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "description": "Container for subtitle text",
                            "position": "absolute",
                            "width": "45vw",
                            "height": "15vh",
                            "top": "37vh",
                            "left": "5vw",
                            "direction": "column",
                            "items": [
                                {
                                    "type": "subTitleTextLayout",
                                    "subTitleText": "${pSubTitleText}"
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "description": "Container for watch now button",
                            "position": "absolute",
                            "width": "15vw",
                            "height": "8vh",
                            "top": "50vh",
                            "left": "5vw",
                            "direction": "row",
                            "items": [
                                {
                                    "type": "Frame",
                                    "id": "videoCard1",
                                    "width": "100%",
                                    "height": "100%",
                                    "backgroundColor": "#202F58",
                                    "borderColor": "white",
                                    "borderWidth": 2,
                                    "borderRadius": "25",
                                    "position": "absolute",
                                    "item": [
                                        {
                                            "type": "Text",
                                            "style": "smallTitle",
                                            "width": "100%",
                                            "height": "100%",
                                            "textAlignVertical": "center",
                                            "text": " ▶   WATCH NOW",
                                            "lineHeight": 2.2
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "width": "100vw",
                            "height": "35vh",
                            "paddingTop": "10",
                            "direction": "row",
                            "items": [
                                {
                                    "type": "Sequence",
                                    "width": "100vw",
                                    "height": "40vh",
                                    "paddingLeft": "@marginLeft",
                                    "paddingRight": "@marginRight",
                                    "data": "${list}",
                                    "numbered": true,
                                    "scrollDirection": "horizontal",
                                    "item": {
                                        "type": "videoCardsLayout"
                                    }
                                }
                            ],
                            "position": "absolute",
                            "left": "4vw",
                            "top": "67vh"
                        }
                    ]
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "mainLayout",
                "pBackgroundImage": "${payload.currentView.properties.backgroundImage}",
                "pLogoImage": "${payload.currentView.properties.logoImage}",
                "pTitleText": "${payload.currentView.properties.titleText}",
                "pSubTitleText": "${payload.currentView.properties.subTitleText}",
                "pWatchNowBtn": "${payload.currentView.properties.watchNowBtn}",
                "list": "${payload.currentView.videoCards}"
            }
        ]
    }
}